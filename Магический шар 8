from random import randint


def valid_user_name(name):
    while not name.isalpha():
        print('Я вас не понимаю, введите пожалуйста своё имя.')
        name = input()
    return name.capitalize()


def answer_no(s):
    while s.lower() not in ['yes', 'y', 'no', 'n', 'да', 'д', 'нет', 'н']:
        print('Я вас не понимаю, введите пожалуйста ответ в формате да или нет')
        s = input()
    if s.lower() in ['no', 'n', 'нет', 'н']:
        return True
    else:
        return False


def choice(answers):
    return answers[randint(0, 19)]


answers = ['Бесспорно', 'Предрешено', 'Никаких сомнений', 'Определённо да', 'Можешь быть уверен в этом',\
           'Мне кажется - да', 'Вероятнее всего', 'Хорошие перспективы', 'Знаки говорят - да', 'Да', \
            'Пока неясно, попробуй снова', 'Спроси позже', 'Лучше не рассказывать', 'Сейчас нельзя предсказать', 'Сконцентрируйся и спроси опять',\
            'Даже не думай', 'Мой ответ - нет', 'По моим данным - нет', 'Перспективы не очень хорошие', 'Весьма сомнительно']
print('Привет Мир, я магический шар, и я знаю ответ на любой твой вопрос.')
print('Как вас зовут? Введите своё имя.')
user_name = valid_user_name(input())
print(f'Привет, {user_name}!')
want_to_continue = True
while want_to_continue:
    print('Задайте свой вопрос на который можно ответить да или нет.')
    question = input().strip()
    print(f'Ответ на вопрос "{question.capitalize()}"')
    print(choice(answers))
    print('Хотите задать ещё вопрос? (Д/н)')
    if answer_no(input()):
        want_to_continue = False
print('Возвращайся, если возникнут вопросы!')