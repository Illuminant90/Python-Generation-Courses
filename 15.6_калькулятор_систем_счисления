def convert_binary_to_decimal(number):
    converted_number = 0
    degree_indicator = 0
    for i in range(-1, -len(number) - 1, -1):
        converted_number += int(number[i]) * (2 ** degree_indicator)
        degree_indicator += 1
    return converted_number


def convert_hexadecimal_to_decimal(number):
    converted_number = 0
    degree_indicator = 0
    digits = [str(i) for i in range(10)]
    for i in range(6):
        digits.append(chr(ord('A') + i))
    for i in range(-1, -len(number) - 1, -1):
        converted_number += digits.index(number[i]) * 16 ** degree_indicator
        degree_indicator += 1
    return converted_number


